-- 1. Database create
CREATE DATABASE IF NOT EXISTS company_db;
USE company_db;

-- 2. Employees table create 
CREATE TABLE IF NOT EXISTS Employees (
  EmpID INT PRIMARY KEY,
  EmpName VARCHAR(100),
  Department VARCHAR(50),
  City VARCHAR(50),
  Salary INT,
  HireDate DATE
);

